MEMORY
{
	/* Secure AXI SRAM1 bank. */
	sram1 (rwx) : ORIGIN = 0x34120000, LENGTH = 1024K - 128K
}

ENTRY(__start)
SECTIONS
{
	. = 0x34120000;
	.start . : {
		*start.o(.text)
	} > sram1

	.text : {
		*(.text)
	} > sram1

	.rodata : {
		*(.rodata)
	} > sram1

	.ARM.exidx : {
		*(.ARM.exidx)
	} > sram1

	.rodata.str1.1 : {
		*(.rodata.str1.1)
	} > sram1

	/* Ensure _smem is associated with the next section */
	. = .;
	_smem = ABSOLUTE(.);
	.data : {
		/* No data relocation. */
		_sdata = ABSOLUTE(.);
		_edata = ABSOLUTE(.);
		*(.data)
	} > sram1

	.bss : {
		_sbss = ABSOLUTE(.);
		*(.bss COMMON)
		*(.sbss)
		_ebss = ABSOLUTE(.);
	} > sram1

	. = ALIGN(8);
	. = . + 0x4096; /* 16kB of stack memory */
	stack_top = .;
	_emem = ABSOLUTE(.);
}
